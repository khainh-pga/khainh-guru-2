{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "jest"
  ],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-console": "off",
    "semi": ["error", "never"],
    "no-extra-semi": 2
  },
  "ignorePatterns": [
    "webpack-configure.js",
    "webpack.config.js"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@common/*", "./src/common/*"],
          ["@utils", "./src/common/utils"]
        ]
      }
    }
  }
}